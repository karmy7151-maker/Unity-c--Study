using System;
					
public class EnumProgram
{
	public enum Type{ //enum은 열거형 상수를 표현하기 위한것
	Soft, //0
	Stand, //1
	Hard = 5 // 5,  숫자지정가능
	} // 컴퓨터는 이를 0 1 2로 받아들이지만 우리는 단어로 받아들임
	
	public static void Main()
	{
		Type type; // 변수 선언
		
		type = Type.Soft; //값대입 반드시 이름. 으로 접근후 사용할것
		
		int typenum = (int)Type.Hard; // 가지고 있는 값을 정수로 변환후 저장
		
		
	}
}

public class Program
{
	
	public static void Main()
	{
		int a = 10;
		int b = 20;
		
		Console.WriteLine(a+b);
		Console.WriteLine(a-b);
		Console.WriteLine(a*b);
		Console.WriteLine(a/b);
		Console.WriteLine(a%b);
		
		int c = a;
		c += a;
		c -= a;
		c *= a;
		c ++;
		c --;
		
		/*&& || ! 각 and or not 주로 if문에 쓰이며 &&은 모든 조건 만족
		||은 한 조건일도 만족 !은 부정일시*/
		
		/* < > == != >= <=  비교문 각 크기,같은지,다른지,크거나같은지를 본다*/
		
		c = (a>b) ? a : b; //a가 b보다 크면 a를 아니면 b를 c에 대입한다
		
		string q = "ss";
		string p = "pp";
		string s = q ?? p;  //a가 null이아니면 a를 null이면 b를 대입
		// null이란 값이 아예 없는 상태를 말함 0아님
		// 기본적으로 문자열이 null상태를 가질 수 있고 int는 가질 수 없으나
		//int? a같이 뒤에?를 붙이면 사용가능하다

	}
}
public class ProgramIF
{
	public static void Main()
	{
	
	int i = int.Parse(Console.ReadLine());
		if( i > 10){ //if는 조건이 참일 경우 작동  {} <= 안에 있는 코드 작동
			Console.WriteLine("i가 10보다 큽니다");
		}
		else if(i < 10 && i > 0){ //else if는 if가 거짓인 경우 다른 조건을 보고 참일경우 실행
			
			Console.WriteLine("i는 10보다 작고 0보다 큽니다");
			
		}
		else if(i < 0 || i == 0){ //&& 둘다 참 || 둘중 하나만 참이여도
			
			Console.WriteLine("i는 0보다 작거나 0입니다");
			
		}
		else{// if와 else if가 모두 거짓일 경우 작동
			Console.WriteLine("i가 10입니다");
		}
	
		int l = int.Parse(Console.ReadLine());
		switch(l){ //()안의 변수가 여러값을 가질 경우 사용한다
				
			case 1:    //case 조건값:  코드   break; 식으로 작성 
				Console.WriteLine("1입니다");
				break;
			case 2:
				Console.WriteLine("2입니다");
				break;
			case 3:
				Console.WriteLine("3입니다");
				break;	
			default: // default는 모든 맞는 케이스가 없을경우 작동한다 
				Console.WriteLine("맞는 케이스가 없습니다");
				break;
		
		}	
	}
}
